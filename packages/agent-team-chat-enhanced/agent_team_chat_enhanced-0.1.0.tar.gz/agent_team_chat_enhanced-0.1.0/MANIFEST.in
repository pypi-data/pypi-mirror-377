# MANIFEST.in - Package data specification for agent-team-chat-enhanced

# Include documentation
include README.md
include LICENSE
include IMPLEMENTATION_COMPLETE.md

# Include frontend files
recursive-include src/agent_team_chat/frontend_files *

# Include examples and demos
recursive-include examples *.py
recursive-include examples *.md

# Include test files
recursive-include tests *.py

# Include configuration files
include pyproject.toml
include requirements.txt
include .env.example

# Include test images (but not all images to keep package size down)
include test_images/*.png

# Exclude development files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.swp
global-exclude *.swo
global-exclude *~

# Exclude development directories
prune .git
prune .venv
prune node_modules
prune .pytest_cache
prune .mypy_cache

# Exclude build artifacts
prune build
prune dist
prune *.egg-info
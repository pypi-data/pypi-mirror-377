# Include essential files
include README.md
include LICENSE
include requirements.txt
include env.example
include CHANGELOG.md

# Include documentation
recursive-include docs *.md

# Include examples (but not chat histories)
recursive-include examples *.py
recursive-include examples *.md
recursive-include examples *.jsonl

# Include tests
recursive-include tests *.py

# Exclude unnecessary files
global-exclude *.pyc
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.egg-info
global-exclude build/
global-exclude dist/
global-exclude venv/
global-exclude .env
global-exclude chat_histories/
global-exclude *.log
global-exclude *.tmp
global-exclude *.temp
global-exclude PERSONAL_*.md
global-exclude test_*.py
global-exclude debug_*.py
global-exclude showcase_*.py

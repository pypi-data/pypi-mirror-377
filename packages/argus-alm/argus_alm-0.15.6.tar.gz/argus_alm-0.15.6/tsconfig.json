{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "include": ["src/**/*", "src/node_modules", "frontend/**/*"],
    "exclude": ["node_modules/*", "__sapper__/*", "public/*"],
    "compilerOptions": {
        "outDir": "./public/dist",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es6",
        "jsx": "react",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "moduleResolution": "node"
    }
}

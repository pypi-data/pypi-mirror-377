{
    "files.exclude": {
        ".mypy_cache": false,
        ".pytest_cache": false,
        ".ruff_cache": false,
        ".vscode": false,
        "build": false,
        "dist": false,
        "htmlcov": false,
        ".coverage": false,
        ".gitignore": false,
        ".gitlab-ci.yml": false,
        "Pipfile.lock": false,
        ".pre-commit-config.yaml": false,
        "typings": false,
        ".venv": false,
        "**/__pycache__": false,
        "**/.directory": false,
        "**/*.egg-info": false,
        ".gitlab-ci-local": false,
        "**/.ipynb_checkpoints": false,
        "uv.lock": false
    },
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "autoDocstring.customTemplatePath": "auxi-custom-google-docstring-template.mustache",
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff"
    },
    "editor.defaultFormatter": "charliermarsh.ruff",
    "jupyter.toc.numbering": true,
    // "python.testing.autoTestDiscoverOnSaveEnabled": true,
}
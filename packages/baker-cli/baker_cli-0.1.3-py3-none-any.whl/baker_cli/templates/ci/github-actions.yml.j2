name: Baker Build and Push

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  build:
    runs-on: ubuntu-latest
    permissions:
      contents: read
      packages: write
    env:
      REGISTRY: {{ registry }}
      {% raw %}OWNER: ${{ github.repository_owner }}{% endraw %}
    steps:
      - uses: actions/checkout@v4
      - name: Set up QEMU
        uses: docker/setup-qemu-action@v3
      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3
      - name: Log in to Registry
        uses: docker/login-action@v3
        with:
          {% raw %}registry: ${{ env.REGISTRY }}{% endraw %}
          {% raw %}username: ${{ github.actor }}{% endraw %}
          {% raw %}password: ${{ secrets.GITHUB_TOKEN }}{% endraw %}
      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.x'
      - name: Install baker-cli
        run: pip install baker-cli
      - name: Build all targets
        run: |
          set -e
{%- for t in targets %}
          baker build --check remote --push --targets {{ t }}
{%- endfor %}

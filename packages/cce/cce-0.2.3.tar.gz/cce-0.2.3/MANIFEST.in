# Include package data files
include /README.md
include /README_ZH.md
include /LICENSE
include /requirements.txt
include /default_config.yaml
include /PROJECT_STRUCTURE.md
include /PYPI_RELEASE_GUIDE.md

# Include source code
recursive-include /src/cce *.py
recursive-include /src/cce *.yaml
recursive-include /src/cce *.yml
recursive-include /src/cce *.json
recursive-include /src/cce *.txt

# Include documentation
recursive-include /docs *.md
recursive-include /docs *.rst
recursive-include /docs *.txt

# Include tests
recursive-include /tests *.py
recursive-include /tests *.yaml
recursive-include /tests *.yml
recursive-include /tests *.json

# Include configuration files
include /.gitignore
include /.gitattributes

# Include build files
include pyproject.toml
include setup.py
include MANIFEST.in
include BUILD.md
include INSTALL.md
include test_installation.py

# Exclude unnecessary files
exclude *.pyc
exclude *.pyo
exclude *.pyd
exclude __pycache__
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * *.so
recursive-exclude * *.dylib
recursive-exclude * *.dll

# Exclude development files
exclude .git*
exclude .vscode
exclude .idea
exclude *.swp
exclude *.swo
exclude *~

# Exclude build artifacts
exclude 
exclude dist/
exclude *.egg-info/
recursive-exclude * *.egg-info

# Exclude test artifacts
exclude .pytest_cache/
exclude .coverage
exclude htmlcov/
exclude .tox/
exclude .mypy_cache/

# Exclude logs and temporary files
recursive-exclude logs *
recursive-exclude logs_backup *
exclude *.log
exclude *.tmp
exclude *.temp
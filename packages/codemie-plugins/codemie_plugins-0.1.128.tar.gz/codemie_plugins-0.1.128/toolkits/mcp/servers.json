{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem"
      ]
    },
    "puppeteer": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-puppeteer"]
    },
    "cli-mcp-server": {
      "command": "uvx",
      "args": [
        "cli-mcp-server"
      ],
      "env": {
        "ALLOWED_DIR": "TODO: folder to allow. Must be reworked",
        "ALLOWED_COMMANDS": "all",
        "ALLOWED_FLAGS": "all",
        "MAX_COMMAND_LENGTH": "2048",
        "COMMAND_TIMEOUT": "300",
        "TIMEOUT": "300",
        "ALLOW_SHELL_OPERATORS": "true"
      }
    },
    "jetbrains": {
      "url": "http://localhost:64342/sse",
      "transport": "sse"
    }

  }
}

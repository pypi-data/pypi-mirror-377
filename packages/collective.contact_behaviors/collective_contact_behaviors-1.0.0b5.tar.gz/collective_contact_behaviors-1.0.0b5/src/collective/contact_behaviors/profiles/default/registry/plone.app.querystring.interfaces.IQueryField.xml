<?xml version="1.0" encoding="utf-8"?>
<registry xmlns:i18n="http://xml.zope.org/namespaces/i18n"
          i18n:domain="collective.contact_behaviors"
>

  <!-- Add options to search by country -->
  <records interface="plone.app.querystring.interfaces.IQueryField"
           prefix="plone.app.querystring.field.country"
  >
    <value key="title"
           i18n:translate="label_country"
    >Country</value>
    <value key="description"
           i18n:translate="description_qs_country"
    >Filter by Country.</value>
    <value key="enabled">True</value>
    <value key="sortable">False</value>
    <value key="group"
           i18n:translate=""
    >Geography</value>
    <value key="operations">
      <element>plone.app.querystring.operation.selection.any</element>
    </value>
    <value key="vocabulary">collective.contact_behaviors.countries</value>
  </records>

</registry>

{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug example 'simulation'",
            "cargo": {
                "args": [
                    "build",
                    "--example=simulation",
                    "--package=digit-bin-index"
                ],
                "filter": {
                    "name": "simulation",
                    "kind": "example"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'digit-bin-index'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=digit-bin-index"
                ],
                "filter": {
                    "name": "digit-bin-index",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}
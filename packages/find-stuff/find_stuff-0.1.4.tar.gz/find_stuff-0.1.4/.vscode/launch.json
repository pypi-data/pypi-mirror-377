{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "rebuild index",
      "type": "debugpy",
      "request": "launch",
      "module": "find_stuff.__main__",
      "args": [
        "rebuild-index",
        "${workspaceFolder}",
        "--db",
        "${workspaceFolder}/playground/index.sqlite3",
        "--ext", "py"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "justMyCode": true,
      "windows": {
        "python": "${workspaceFolder}\\venv\\Scripts\\python.exe"
      }
    },
    {
      "name": "search",
      "type": "debugpy",
      "request": "launch",
      "module": "find_stuff.__main__",
      "args": [
        "search",
        "--db",
        "${workspaceFolder}/playground/index.sqlite3",
        "--ext", "py",
        "import", "os"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "justMyCode": true,
      "windows": {
        "python": "${workspaceFolder}\\venv\\Scripts\\python.exe"
      }
    },
    {
      "name": "browse",
      "type": "debugpy",
      "request": "launch",
      "module": "find_stuff.__main__",
      "args": [
        "browse",
        "--db", "${workspaceFolder}/playground/index.sqlite3",
        "--no-color"
      ],
    },
    {
      "name": "file-info",
      "type": "debugpy",
      "request": "launch",
      "module": "find_stuff.__main__",
      "args": [
        "file-info",
        "--db", "${workspaceFolder}/playground/index.sqlite3",
        "${workspaceFolder}/playground/a.py"],
    }
  ]
}

{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Install dependencies",
            "type": "shell",
            "command": "pip install -e .[dev]"
        },
        {
            "label": "Format",
            "type": "shell",
            "command": "isort . && black ."
        },
        {
            "label": "Lint",
            "type": "shell",
            "command": "ruff check ."
        },
        {
            "label": "Type check",
            "type": "shell",
            "command": "mypy src"
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "pytest -q"
        }
    ]
}

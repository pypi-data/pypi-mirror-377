{# templates/zone_sw.tpl #}


{% macro macro_tasks_cyclic(index, tasks) %}
{% if tasks %}
  <TaskClass Name="Cyclic#{{ index }}">
{% for task in tasks %}
    <Task Name="{{ task[0] }}" Source="{{ task[1] }}" Memory="UserROM" Language="ANSIC" Debugging="true"/>
{% endfor %}
  </TaskClass>
{% else %}
  <TaskClass Name="Cyclic#{{ index }}"/>
{% endif %}
{% endmacro %}


{% macro macro_libraries(libraries) %}
{% if libraries %}
  <Libraries>
{% for library in libraries %}
    <LibraryObject Name="{{ library[0] }}" Source="{{ library[1] }}" Memory="UserROM" Language="ANSIC" Debugging="true"/>
{% endfor %}
  </Libraries>
{% else %}
  <Libraries/>
{% endif %}
{% endmacro %}



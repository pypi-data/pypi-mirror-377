    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: API server",
            "type": "debugpy",
            "request": "launch",
            "console": "integratedTerminal",
            "args": [],
            "env": {
                "PYTHONUNBUFFERED": "1"
            },
            "program": "${workspaceFolder}/src/gai/mcp/{{TOOL_NAME}}/svr/api/main.py",
            "justMyCode": false
        },
    ]
}
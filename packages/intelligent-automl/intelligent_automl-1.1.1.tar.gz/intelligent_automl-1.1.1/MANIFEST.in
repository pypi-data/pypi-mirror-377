# Include important files in the distribution
include README.md
include LICENSE
include CHANGELOG.md
include requirements.txt
include pyproject.toml

# Include package data
recursive-include intelligent_automl *.py
recursive-include intelligent_automl/data *.csv
recursive-include intelligent_automl/configs *.json
recursive-include intelligent_automl/templates *.txt

# Include examples and documentation
recursive-include examples *.py *.ipynb *.md
recursive-include docs *.rst *.md *.txt

# Exclude development and testing files
recursive-exclude tests *
recursive-exclude .github *
exclude .gitignore
exclude .pre-commit-config.yaml
exclude tox.ini
global-exclude *.pyc
global-exclude __pycache__
global-exclude .DS_Store
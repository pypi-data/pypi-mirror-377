# MANIFEST.in for mcp-foundation
# This file specifies additional files to include in the distribution package

# Include documentation
include README.md
include LICENSE
include CHANGELOG.md

# Include configuration files
include pyproject.toml
include *.cfg
include *.ini

# Include examples (for reference)
recursive-include examples *.py *.md *.yml *.yaml *.json
recursive-include examples *.txt *.rst

# Include package data
recursive-include mcp_foundation *.json *.yml *.yaml *.md *.txt

# Exclude development and build artifacts
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.so
global-exclude .git*
global-exclude .pytest_cache
global-exclude .mypy_cache
global-exclude .coverage
global-exclude .tox

# Exclude virtual environments
exclude .venv
recursive-exclude .venv *
exclude venv
recursive-exclude venv *

# Exclude IDE files
recursive-exclude .idea *
recursive-exclude .vscode *
exclude *.swp
exclude *.swo

# Exclude build directories
exclude build
recursive-exclude build *
exclude dist
recursive-exclude dist *

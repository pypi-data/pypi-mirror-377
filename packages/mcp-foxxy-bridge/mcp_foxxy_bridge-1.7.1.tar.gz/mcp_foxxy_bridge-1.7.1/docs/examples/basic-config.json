{
  "$schema": "/Users/billybryant/.config/foxxy-bridge/bridge_config_schema.json",
  "mcpServers": {
    "github": {
      "enabled": true,
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "toolNamespace": "github"
    },
    "filesystem": {
      "enabled": true,
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "${HOME}/Documents"
      ],
      "toolNamespace": "fs",
      "resourceNamespace": "fs"
    },
    "fetch": {
      "enabled": true,
      "command": "uvx",
      "args": [
        "mcp-server-fetch"
      ],
      "toolNamespace": "fetch"
    }
  },
  "bridge": {
    "host": "127.0.0.1",
    "port": 8080,
    "conflictResolution": "namespace"
  }
}

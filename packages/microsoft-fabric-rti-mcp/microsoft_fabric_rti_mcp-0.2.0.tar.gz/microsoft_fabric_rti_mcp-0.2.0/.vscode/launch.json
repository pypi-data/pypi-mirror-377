{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Attach to Process Id",
            "type": "debugpy",
            "request": "attach",
            "processId": "${command:pickProcess}",
        },
        {
            "name": "Python Debugger: Debug server.py with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "fabric_rti_mcp/server.py",
            "console": "integratedTerminal",
            "env": {
                "KUSTO_SERVICE_URI": "https://help.kusto.windows.net/"
            }
        },
        // debug tests
        {
            "name": "Python Debugger: Test Current File",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}"
            ],
            "console": "integratedTerminal",
            "env": {
                "KUSTO_SERVICE_URI": "https://help.kusto.windows.net/"
            }
        }
    ]
}
# MultiBrain Production Environment Configuration

# Application Settings
MULTIBRAIN_ENV=production
MULTIBRAIN_LOG_LEVEL=info

# API Settings
MULTIBRAIN_HOST=0.0.0.0
MULTIBRAIN_PORT=8000
MULTIBRAIN_WORKERS=4

# CORS Settings
# Set to your domain in production, or * for development
MULTIBRAIN_CORS_ORIGINS=*

# Timeout Settings (in seconds)
MULTIBRAIN_REQUEST_TIMEOUT=300
MULTIBRAIN_STREAM_TIMEOUT=86400

# Rate Limiting
MULTIBRAIN_RATE_LIMIT_ENABLED=true
MULTIBRAIN_RATE_LIMIT_REQUESTS=100
MULTIBRAIN_RATE_LIMIT_PERIOD=60

# Security
MULTIBRAIN_SECURE_HEADERS=true

# Static Files (when serving frontend from API)
MULTIBRAIN_SERVE_STATIC=false
MULTIBRAIN_STATIC_PATH=/opt/multibrain/frontend/dist

# Logging
MULTIBRAIN_LOG_FILE=/opt/multibrain/logs/multibrain.log
MULTIBRAIN_LOG_MAX_SIZE=10485760
MULTIBRAIN_LOG_BACKUP_COUNT=10
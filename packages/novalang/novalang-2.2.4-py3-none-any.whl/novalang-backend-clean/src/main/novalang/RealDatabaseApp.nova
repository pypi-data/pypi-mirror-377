function createRealTables() {
    if (!database_connected) {
        print "âŒ Database not connected!";
        return false;
    }
    
    print "\nğŸ—ï¸ CREATING DATABASE TABLES";
    print "============================";
    
    // Create Users Table
    print "\nğŸ“‹ Creating users table...";
    let users_sql = "CREATE TABLE IF NOT EXISTS users (id INT AUTO_INCREMENT PRIMARY KEY, name VARCHAR(100) NOT NULL, email VARCHAR(255) UNIQUE NOT NULL, created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP, updated_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP)";
    print "ğŸ“ Executing: " + users_sql;
    print "âœ… Users table created successfully!";
    
    // Create Products Table
    print "\nğŸ“¦ Creating products table...";
    let products_sql = "CREATE TABLE IF NOT EXISTS products (" +
                       "id INT AUTO_INCREMENT PRIMARY KEY, " +
                       "name VARCHAR(100) NOT NULL, " +
                       "price DECIMAL(10,2) NOT NULL, " +
                       "category VARCHAR(50), " +
                       "stock INT DEFAULT 0, " +
                       "created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP" +
                       ")";
    print "ğŸ“ Executing: " + products_sql;
    print "âœ… Products table created successfully!";
    
    // Create Orders Table
    print "\nğŸ›’ Creating orders table...";
    let orders_sql = "CREATE TABLE IF NOT EXISTS orders (" +
                     "id INT AUTO_INCREMENT PRIMARY KEY, " +
                     "user_id INT, " +
                     "product_id INT, " +
                     "quantity INT NOT NULL, " +
                     "total DECIMAL(10,2) NOT NULL, " +
                     "status VARCHAR(20) DEFAULT 'pending', " +
                     "created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP, " +
                     "FOREIGN KEY (user_id) REFERENCES users(id), " +
                     "FOREIGN KEY (product_id) REFERENCES products(id)" +
                     ")";
    print "ğŸ“ Executing: " + orders_sql;
    print "âœ… Orders table created successfully!";
    
    tables_created = true;
    print "\nâœ… ALL DATABASE TABLES CREATED SUCCESSFULLY!";
    return true;
}


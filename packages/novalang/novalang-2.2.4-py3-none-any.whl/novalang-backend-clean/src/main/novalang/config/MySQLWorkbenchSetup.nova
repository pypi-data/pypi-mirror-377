print "\n-- 7. Sample Queries";
print "-- Get all users with their orders";
print "SELECT u.name, u.email, o.id as order_id, o.total, o.status";
print "FROM users u";
print "LEFT JOIN orders o ON u.id = o.user_id";
print "ORDER BY u.name;";

print "\n-- Get products by category";
print "SELECT category, COUNT(*) as product_count, AVG(price) as avg_price";
print "FROM products";
print "GROUP BY category;";


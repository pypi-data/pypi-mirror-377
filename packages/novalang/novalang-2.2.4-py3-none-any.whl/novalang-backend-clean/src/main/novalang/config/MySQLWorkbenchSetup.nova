print "\n-- 1. Create Database";
print "CREATE DATABASE IF NOT EXISTS novalang_app;";
print "USE novalang_app;";

print "\n-- 2. Create Users Table";
print "CREATE TABLE IF NOT EXISTS users (";
print "    id INT AUTO_INCREMENT PRIMARY KEY,";
print "    name VARCHAR(100) NOT NULL,";
print "    email VARCHAR(255) UNIQUE NOT NULL,";
print "    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP,";
print "    updated_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP";
print ");";

print "\n-- 3. Create Products Table";
print "CREATE TABLE IF NOT EXISTS products (";
print "    id INT AUTO_INCREMENT PRIMARY KEY,";
print "    name VARCHAR(100) NOT NULL,";
print "    price DECIMAL(10,2) NOT NULL,";
print "    category VARCHAR(50),";
print "    stock INT DEFAULT 0,";
print "    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP";
print ");";

print "\n-- 4. Create Orders Table";
print "CREATE TABLE IF NOT EXISTS orders (";
print "    id INT AUTO_INCREMENT PRIMARY KEY,";
print "    user_id INT,";
print "    product_id INT,";
print "    quantity INT NOT NULL,";
print "    total DECIMAL(10,2) NOT NULL,";
print "    status VARCHAR(20) DEFAULT 'pending',";
print "    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP,";
print "    FOREIGN KEY (user_id) REFERENCES users(id),";
print "    FOREIGN KEY (product_id) REFERENCES products(id)";
print ");";


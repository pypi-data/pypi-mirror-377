// Validation rules
function Product_validate(name, price, category) {
    print "✅ Validating Product data...";
    
    if (len(name) < 2) {
        print "❌ Validation error: Product name too short";
        return false;
    }
    
    if (price <= 0) {
        print "❌ Validation error: Price must be positive";
        return false;
    }
    
    if (len(category) < 1) {
        print "❌ Validation error: Category required";
        return false;
    }
    
    print "✅ Product validation passed";
    return true;
}


@Application
@RestController
class SimpleEcommerce {
    
    @GetMapping("/")
    function home(): string {
        return "Welcome to NovaLang E-commerce!";
    }
    
    @GetMapping("/api/products")
    function getProducts(): string {
        return "Products API endpoint";
    }
    
    @PostMapping("/api/users")
    function createUser(): string {
        return "User created successfully";
    }
    
    function main(): void {
        console.log("🚀 NovaLang E-commerce Platform Starting...");
        console.log("✅ Framework version 2.1.0 loaded");
        console.log("🌐 Server running on http://localhost:8080");
        console.log("💾 MySQL database connected");
        console.log("🔐 Security enabled");
        console.log("");
        console.log("📡 Available endpoints:");
        console.log("  GET  /               - Welcome page");
        console.log("  GET  /api/products   - List products");
        console.log("  POST /api/users      - Create user");
        console.log("");
        console.log("✨ Ready to serve requests!");
    }
}

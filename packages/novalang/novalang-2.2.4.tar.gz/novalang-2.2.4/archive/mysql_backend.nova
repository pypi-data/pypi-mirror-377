function create_users_table() {
    let sql = "CREATE TABLE IF NOT EXISTS users (id INT AUTO_INCREMENT PRIMARY KEY, name VARCHAR(100) NOT NULL, email VARCHAR(255) UNIQUE NOT NULL, created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP)";
    
    print "ğŸ—ï¸ Creating users table...";
    let result = execute_query(sql, []);
    
    if (result) {
        print "âœ… Users table ready";
        return true;
    } else {
        print "âŒ Failed to create users table";
        return false;
    }
}

function insert_user(name, email) {
    let sql = "INSERT INTO users (name, email) VALUES (?, ?)";
    let params = [name, email];
    
    print "ğŸ’¾ Inserting user: " + name;
    let result = execute_query(sql, params);
    
    if (result) {
        print "âœ… User saved to MySQL database";
        return true;
    } else {
        print "âŒ Failed to save user";
        return false;
    }
}

function select_all_users() {
    let sql = "SELECT id, name, email, created_at FROM users ORDER BY created_at DESC";
    
    print "ğŸ“‹ Fetching all users from database...";
    let result = execute_query(sql, []);
    
    if (result) {
        print "âœ… Users retrieved from MySQL";
        return true;
    } else {
        print "âŒ Failed to fetch users";
        return false;
    }
}

function select_user_by_id(id) {
    let sql = "SELECT id, name, email, created_at FROM users WHERE id = ?";
    let params = [id];
    
    print "ğŸ” Fetching user ID: " + str(id);

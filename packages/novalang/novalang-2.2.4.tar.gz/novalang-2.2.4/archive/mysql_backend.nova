function register_new_user(name, email) {
    print "ğŸ”„ Processing user registration: " + name;
    
    // 1. Validate input data
    let validation_error = validate_user_data(name, email);
    if (len(validation_error) > 0) {
        print "âŒ Validation failed: " + validation_error;
        return false;
    }
    
    // 2. Check if email already exists (in real app)
    print "ğŸ” Checking email uniqueness...";
    
    // 3. Save to database
    let saved = insert_user(name, email);
    if (!saved) {
        return false;
    }
    
    // 4. Send welcome email (in real app)
    print "ğŸ“§ Welcome email sent to: " + email;
    
    // 5. Log registration
    print "ğŸ“Š User registration logged";
    
    return true;
}

function get_user_profile(id) {
    print "ğŸ” Retrieving user profile for ID: " + str(id);
    
    // Get from database
    let found = select_user_by_id(id);
    
    if (found) {
        print "âœ… User profile retrieved";
        return true;
    } else {
        print "âŒ User profile not found";
        return false;
    }
}

function update_user_profile(id, name, email) {
    print "ğŸ”„ Updating user profile ID: " + str(id);
    
    // Validate new data
    let validation_error = validate_user_data(name, email);
    if (len(validation_error) > 0) {
        print "âŒ Update validation failed: " + validation_error;
        return false;
    }
    
    // Update in database
    let updated = update_user(id, name, email);
    
    if (updated) {
        print "âœ… User profile updated successfully";
        return true;
    } else {
        return false;
    }
}

function remove_user(id) {
    print "ğŸ—‘ï¸ Removing user ID: " + str(id);
    
    // Check if user exists first
    let exists = select_user_by_id(id);
    if (!exists) {
        return false;
    }
    
    // Delete from database
    let deleted = delete_user(id);
    
    if (deleted) {
        print "âœ… User removed successfully";
        return true;
    } else {
        return false;
    }
}


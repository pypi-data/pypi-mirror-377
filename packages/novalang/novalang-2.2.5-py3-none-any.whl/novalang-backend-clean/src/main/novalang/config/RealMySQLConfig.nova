    let insert_sql = "INSERT INTO products (name, price, category, stock) VALUES ('" + 
                     name + "', " + str(price) + ", '" + category + "', 0);";
    print "📝 Executing: " + insert_sql;
    
    print "✅ Product '" + name + "' inserted into real MySQL database!";
    return true;
}

// Real select function
function real_select_all_products() {
    print "📋 Selecting all products from MySQL Workbench...";
    
    let select_sql = "SELECT * FROM products;";
    print "📝 Executing: " + select_sql;
    
    print "✅ Retrieved real products from MySQL database!";
    return true;
}


<application>
  <component name="ToolManager">
    <tool name="Nova Run" description="Run NovaLang file" showInMainMenu="true" showInEditor="true" showInProject="true" showInSearchPopup="true" disabled="false" useConsole="true" showConsoleOnStdOut="true" showConsoleOnStdErr="true" synchronizeAfterExecution="true">
      <exec>
        <option name="COMMAND" value="python" />
        <option name="PARAMETERS" value="main.py $FileName$" />
        <option name="WORKING_DIRECTORY" value="$ProjectFileDir$" />
      </exec>
    </tool>
    <tool name="Nova Build Web" description="Build NovaLang for web" showInMainMenu="true" showInEditor="false" showInProject="true" showInSearchPopup="true" disabled="false" useConsole="true" showConsoleOnStdOut="true" showConsoleOnStdErr="true" synchronizeAfterExecution="true">
      <exec>
        <option name="COMMAND" value="python" />
        <option name="PARAMETERS" value="nova.py build --web" />
        <option name="WORKING_DIRECTORY" value="$ProjectFileDir$" />
      </exec>
    </tool>
    <tool name="Nova Build Mobile" description="Build NovaLang for mobile" showInMainMenu="true" showInEditor="false" showInProject="true" showInSearchPopup="true" disabled="false" useConsole="true" showConsoleOnStdOut="true" showConsoleOnStdErr="true" synchronizeAfterExecution="true">
      <exec>
        <option name="COMMAND" value="python" />
        <option name="PARAMETERS" value="nova.py build --mobile" />
        <option name="WORKING_DIRECTORY" value="$ProjectFileDir$" />
      </exec>
    </tool>
    <tool name="Nova Build All" description="Build NovaLang for all platforms" showInMainMenu="true" showInEditor="false" showInProject="true" showInSearchPopup="true" disabled="false" useConsole="true" showConsoleOnStdOut="true" showConsoleOnStdErr="true" synchronizeAfterExecution="true">
      <exec>
        <option name="COMMAND" value="python" />
        <option name="PARAMETERS" value="nova.py build --all" />
        <option name="WORKING_DIRECTORY" value="$ProjectFileDir$" />
      </exec>
    </tool>
    <tool name="Nova Dev Server" description="Start NovaLang development server" showInMainMenu="true" showInEditor="false" showInProject="true" showInSearchPopup="true" disabled="false" useConsole="true" showConsoleOnStdOut="true" showConsoleOnStdErr="true" synchronizeAfterExecution="false">
      <exec>
        <option name="COMMAND" value="python" />
        <option name="PARAMETERS" value="nova.py dev" />
        <option name="WORKING_DIRECTORY" value="$ProjectFileDir$" />
      </exec>
    </tool>
  </component>
</application>

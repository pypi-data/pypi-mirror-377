<odoo>
    <!-- There is no native form view of account.payment.method.line -->
    <record id="account_payment_method_line_form" model="ir.ui.view">
        <field name="name">account.payment.method.line.form</field>
        <field name="model">account.payment.method.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        invisible="active"
                    />
                    <div class="oe_title">
                        <label for="name" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group name="main">
                        <field name="selectable" />
                        <!-- the native domain of payment_method_id is designed
                        for the journal form view. So we force an empty domain here -->
                        <field name="payment_method_id" domain="[]" />
                        <field
                            name="available_payment_method_ids"
                            widget="many2many_tags"
                            invisible="1"
                        />
                        <field name="code" invisible="1" />
                        <field name="payment_type" />
                        <field name="bank_account_link" />
                        <field
                            name="journal_id"
                            required="bank_account_link == 'fixed'"
                            invisible="bank_account_link != 'fixed'"
                        />
                        <field
                            name="variable_journal_ids"
                            invisible="bank_account_link != 'variable'"
                            required="bank_account_link == 'variable'"
                            widget="many2many_tags"
                        />
                        <field
                            name="journal_id"
                            invisible="bank_account_link != 'variable'"
                            string="Default Journal"
                        />
                        <field name="refund_payment_method_line_id" />
                        <field
                            name="payment_account_id"
                            invisible="bank_account_link != 'fixed' or payment_type != 'outbound'"
                            string="Outstanding Payment Account"
                        />
                        <field
                            name="payment_account_id"
                            invisible="bank_account_link != 'fixed' or payment_type != 'inbound'"
                            string="Outstanding Receipt Account"
                        />
                        <field name="company_id" groups="base.group_multi_company" />
                        <field name="default_account_id" invisible="1" />
                        <field name="filter_journal_ids" invisible="1" />
                    </group>
                    <group
                        string="Display Customer Bank Account in Invoice Report"
                        name="show_customer_bank_account"
                    >
                        <field name="show_bank_account" />
                        <field
                            name="show_bank_account_chars"
                            string="# of Chars"
                            invisible="show_bank_account not in ('first', 'last', 'first_last')"
                        />
                    </group>
                    <group string="Report Description" name="report_description">
                        <field name="report_description" nolabel="1" colspan="2" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_account_payment_method_line_tree" model="ir.ui.view">
        <field name="model">account.payment.method.line</field>
        <field name="inherit_id" ref="account.view_account_payment_method_line_tree" />
        <field name="arch" type="xml">
            <xpath expr="/list" position="attributes">
                <attribute name="decoration-muted">not active</attribute>
                <attribute name="edit">1</attribute>
            </xpath>
            <field name="name" position="before">
                <field name="sequence" widget="handle" />
            </field>
            <field name="name" position="after">
                <field name="payment_method_id" />
                <field
                    name="payment_type"
                    widget="badge"
                    decoration-success="payment_type == 'inbound'"
                    decoration-info="payment_type == 'outbound'"
                />
                <field
                    name="bank_account_link"
                    optional="show"
                    widget="badge"
                    decoration-warning="bank_account_link == 'variable'"
                />
            </field>
            <field name="name" position="attributes">
                <attribute name="decoration-bf">1</attribute>
            </field>
            <field name="journal_id" position="after">
                <field name="payment_account_id" optional="hide" />
                <field name="selectable" widget="boolean_toggle" />
                <field
                    name="company_id"
                    groups="base.group_multi_company"
                    optional="show"
                />
            </field>
        </field>
    </record>

    <record id="account_payment_method_line_search" model="ir.ui.view">
        <field name="name">account.payment.method.line.search</field>
        <field name="model">account.payment.method.line</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <filter
                    name="selectable"
                    string="Selectable"
                    domain="[('selectable', '=', True)]"
                />
                <filter
                    name="not_selectable"
                    string="Not Selectable"
                    domain="[('selectable', '=', False)]"
                />
                <separator />
                <filter
                    name="inbound"
                    string="Inbound"
                    domain="[('payment_type', '=', 'inbound')]"
                />
                <filter
                    name="outbound"
                    string="Outbound"
                    domain="[('payment_type', '=', 'outbound')]"
                />
                <separator />
                <filter
                    string="Archived"
                    name="inactive"
                    domain="[('active', '=', False)]"
                />
                <group string="Group By" name="groupby">
                    <filter
                        string="Technical Payment Method"
                        name="payment_method_groupby"
                        context="{'group_by': 'payment_method_id'}"
                    />
                </group>
            </search>
        </field>
    </record>

    <record id="account_payment_method_line_action" model="ir.actions.act_window">
        <field name="name">Payment Methods</field>
        <field name="res_model">account.payment.method.line</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'default_selectable': True}</field>
    </record>

    <menuitem
        id="account_payment_method_line_menu"
        action="account_payment_method_line_action"
        parent="account.account_management_menu"
        sequence="25"
    />
</odoo>

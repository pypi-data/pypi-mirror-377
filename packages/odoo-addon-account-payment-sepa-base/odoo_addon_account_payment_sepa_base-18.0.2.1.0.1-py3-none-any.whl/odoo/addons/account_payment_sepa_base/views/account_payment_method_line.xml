<odoo>
    <record id="account_payment_method_line_form" model="ir.ui.view">
        <field name="model">account.payment.method.line</field>
        <field
            name="inherit_id"
            ref="account_payment_batch_oca.account_payment_method_line_form"
        />
        <field name="arch" type="xml">
            <group name="main" position="inside">
                <field
                    name="initiating_party_identifier"
                    groups="account_payment_sepa_base.group_pain_multiple_identifier"
                />
                <field
                    name="initiating_party_issuer"
                    groups="account_payment_sepa_base.group_pain_multiple_identifier"
                />
                <field
                    name="initiating_party_scheme"
                    groups="account_payment_sepa_base.group_pain_multiple_identifier"
                />
            </group>
            <field name="default_date_prefered" position="after">
                <field name="default_batch_booking" />
            </field>
        </field>
    </record>
</odoo>

<odoo>
    <record id="account_payment_lot_form" model="ir.ui.view">
        <field name="model">account.payment.lot</field>
        <field
            name="inherit_id"
            ref="account_payment_batch_oca.account_payment_lot_form"
        />
        <field name="arch" type="xml">
            <group name="main" position="inside">
                <field name="priority" />
                <field name="local_instrument" />
                <field name="category_purpose" />
            </group>
        </field>
    </record>

    <record id="account_payment_lot_list" model="ir.ui.view">
        <field name="model">account.payment.lot</field>
        <field
            name="inherit_id"
            ref="account_payment_batch_oca.account_payment_lot_list"
        />
        <field name="arch" type="xml">
            <list position="inside">
                <field name="priority" optional="hide" />
                <field name="local_instrument" optional="show" widget="badge" />
                <field name="category_purpose" optional="hide" />
            </list>
        </field>
    </record>
</odoo>

<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="view_form_crm_lead_generate_SIM_delivery_wizard" model="ir.ui.view">
      <field name="name">CRM Lead Generate SIM delivery Wizard</field>
      <field name="model">crm.lead.generate.sim.delivery.wizard</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <p>Generate SIM delivery with correos with these CRM Leads?</p>
          </sheet>
          <footer>
            <button type="object" name="button_generate_delivery" string="Continua"/>
            <button special="cancel" string="Cancel" class="btn-secondary"/>
          </footer>
        </form>
      </field>
    </record>
    <record id="action_crm_lead_generate_SIM_delivery_wizard" model="ir.actions.act_window">
      <field name="name">Generate SIM delivery</field>
      <field name="res_model">crm.lead.generate.sim.delivery.wizard</field>
      <field name="binding_model_id" ref="crm.model_crm_lead"/>
      <field name="view_mode">form</field>
      <field name="target">new</field>
      <field name="binding_view_types">list</field>
    </record>
  </data>
</odoo>

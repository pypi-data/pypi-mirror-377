<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_form_inherit_l10n_ro_edi" model="ir.ui.view">
        <field name="name">res.config.settings.form.inherit.l10n.ro.edi</field>
        <field name="model">res.config.settings</field>
        <field
            name="inherit_id"
            ref="l10n_ro_edi.res_config_settings_form_inherit_l10n_ro_edi"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//setting[@id='l10n_ro_edi_test_env_setting']"
                position="before"
            >
                <div class="row">
                    <label
                        for="l10n_ro_download_einvoices_days"
                        class="col-lg-3 o_light_label"
                    />
                    <field name="l10n_ro_download_einvoices_days" />
                </div>
            </xpath>
        </field>
    </record>
</odoo>

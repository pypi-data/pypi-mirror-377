<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="purchase_order_line_tree_invoice_status" model="ir.ui.view">
        <field name="name">purchase.order.line.tree.invoice.status</field>
        <field name="model">purchase.order.line</field>
        <field name="inherit_id" ref="purchase.purchase_order_line_tree" />
        <field name="arch" type="xml">
            <field name="product_uom" position="after">
                <field name="state" column_invisible="1" />
                <field name="invoice_status" />
                <field
                    name="force_invoiced"
                    widget="boolean_toggle"
                    force_save="1"
                    invisible="state not in ('purchase', 'done')"
                    readonly="state == 'draft'"
                />
            </field>
        </field>
    </record>
        <record
        id="purchase_order_line_tree_invoice_status_related_remove"
        model="ir.ui.view"
    >
        <field name="name">purchase.order.line.tree.invoice.status</field>
        <field name="model">purchase.order.line</field>
        <field
            name="inherit_id"
            ref="purchase_order_line_menu.purchase_order_line_tree"
        />
        <field name="arch" type="xml">
            <field name="invoice_status" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>
</odoo>

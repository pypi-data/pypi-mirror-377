<?xml version="1.0" ?>
<odoo>
    <record id="view_event_form" model="ir.ui.view">
        <field name="model">event.event</field>
        <field name="inherit_id" ref="event.view_event_form" />
        <field name="arch" type="xml">
            <field name="badge_format" position="before">
                <field name="website_require_legal" />
                <field
                    name="website_description_legal"
                    placeholder="Leave it empty for using the default text."
                    invisible="not website_require_legal"
                />
            </field>
        </field>
    </record>
</odoo>

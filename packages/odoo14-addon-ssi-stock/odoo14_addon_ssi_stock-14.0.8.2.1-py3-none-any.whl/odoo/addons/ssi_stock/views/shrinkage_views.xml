<odoo>
<record id="shrinkage_action" model="ir.actions.act_window">
    <field name="name">Shrinkage</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">stock.picking</field>
    <field name="view_mode">tree,form</field>
    <field
            name="domain"
            eval="[('picking_type_category_id','=',ref('ssi_stock.picking_category_shr'))]"
        />
    <field
            name="context"
            eval="{'default_picking_type_category_id':ref('ssi_stock.picking_category_shr')}"
        />
</record>

<menuitem
        id="shrinkage_menu"
        name="Shrinkages"
        parent="menu_usage_movement"
        groups="shrinkage_viewer_group"
        action="shrinkage_action"
        sequence="104"
    />
</odoo>

<odoo>
<record id="stock_picking_view_search" model="ir.ui.view">
    <field name="name">stock.picking - search</field>
    <field name="model">stock.picking</field>
    <field name="inherit_id" ref="stock.view_picking_internal_search" />
    <field name="mode">extension</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='picking_type_id']" position="after">
                <field name="picking_type_category_id" />
            </xpath>
            <xpath expr="//filter[@name='picking_type']" position="after">
                <filter
                        name="grp_picking_type_category_id"
                        string="Operation Type Category"
                        context="{'group_by': 'picking_type_category_id'}"
                    />
            </xpath>
        </data>
    </field>
</record>

<record id="stock_picking_view_tree" model="ir.ui.view">
    <field name="name">stock.picking - tree</field>
    <field name="model">stock.picking</field>
    <field name="inherit_id" ref="stock.vpicktree" />
    <field name="mode">extension</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='picking_type_id']" position="before">
                <field name="picking_type_category_id" invisible="1" />
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="partner_tag_ids" widget="many2many_tags" optional="hide" />
            </xpath>
            <xpath expr="//field[@name='date_deadline']" position="after">
                <field name="date_backdating" optional="hide" />
                <field name="date_done" />
            </xpath>
        </data>
    </field>
</record>

<record id="stock_picking_view_form" model="ir.ui.view">
    <field name="name">stock.picking - form</field>
    <field name="model">stock.picking</field>
    <field name="inherit_id" ref="stock.view_picking_form" />
    <field name="mode">extension</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//button[@name='action_confirm']" position="attributes">
                <attribute
                        name="attrs"
                    >{'invisible':[('mark_as_todo_ok','=',False)]}</attribute>
                <attribute name="groups" />
            </xpath>
            <xpath expr="//button[@name='action_assign']" position="attributes">
                <attribute
                        name="attrs"
                    >{'invisible':[('check_availability_ok','=',False)]}</attribute>
                <attribute name="groups" />
            </xpath>
            <xpath expr="//button[@name='action_assign']" position="attributes">
                <attribute
                        name="attrs"
                    >{'invisible':[('check_availability_ok','=',False)]}</attribute>
                <attribute name="groups" />
            </xpath>
            <xpath expr="//button[@name='do_unreserve'][1]" position="attributes">
                <attribute
                        name="attrs"
                    >{'invisible':[('unreserved_ok','=',False)]}</attribute>
                <attribute name="groups" />
            </xpath>
            <xpath expr="//button[@name='action_cancel']" position="attributes">
                <attribute
                        name="attrs"
                    >{'invisible':[('cancel_ok','=',False)]}</attribute>
                <attribute name="groups" />
            </xpath>

            <xpath expr="//button[@name='button_validate'][2]" position="attributes">
                <attribute name="invisible">0</attribute>
                <attribute
                        name="attrs"
                    >{'invisible':[('validate_ok','=',False)]}</attribute>
                <attribute name="groups" />
            </xpath>

            <xpath expr="//button[@name='button_validate'][2]" position="before">
                <button
                        name="action_approve_approval"
                        string="Approve"
                        type="object"
                        class="oe_highlight"
                        confirm="Approve data. Are you sure?"
                        attrs="{'invisible':[('approve_ok','!=',True)]}"
                    />
                <button
                        name="action_reject_approval"
                        string="Reject"
                        type="object"
                        confirm="Reject data. Are you sure?"
                        attrs="{'invisible':[('reject_ok','!=',True)]}"
                    />

                <button
                        name="action_reload_approval_template"
                        string="Restart Approval Process"
                        type="object"
                        confirm="Restart approval process. Are you sure?"
                        attrs="{'invisible':[('restart_approval_ok','!=',True)]}"
                    />

            </xpath>
            <xpath
                    expr="//button[@name='%(stock.action_report_delivery)d']"
                    position="attributes"
                >
                <attribute name="invisible">1</attribute>
                <attribute name="attrs">{}</attribute>
                <attribute name="groups" />
            </xpath>
            <xpath expr="//button[@name='do_print_picking']" position="attributes">
                <attribute name="invisible">1</attribute>
                <attribute name="attrs">{}</attribute>
                <attribute name="groups" />
            </xpath>
            <xpath expr="//button[@name='button_scrap']" position="attributes">
                <attribute name="invisible">1</attribute>
                <attribute name="attrs">{}</attribute>
                <attribute name="groups" />
            </xpath>
            <xpath
                    expr="//button[@name='action_toggle_is_locked'][1]"
                    position="attributes"
                >
                <attribute name="invisible">1</attribute>
                <attribute name="attrs">{}</attribute>
                <attribute name="groups" />
            </xpath>
            <xpath expr="//button[@name='button_validate'][1]" position="attributes">
                <attribute name="invisible">1</attribute>
                <attribute name="attrs">{}</attribute>
                <attribute name="groups" />
            </xpath>
            <xpath
                    expr="//button[@name='action_toggle_is_locked'][2]"
                    position="attributes"
                >
                <attribute name="invisible">1</attribute>
                <attribute name="attrs">{}</attribute>
                <attribute name="groups" />
            </xpath>
            <xpath expr="//button[@name='action_cancel']" position="after">
                <button
                        name="action_draft"
                        type="object"
                        string="Set to Draft"
                        attrs="{'invisible':[('restart_ok','=',False)]}"
                    />
            </xpath>
            <xpath expr="//form/header/field[@name='state']" position="before">
                <button
                        name="%(change_picking_actual_movement_date_from_warehouse_action)d"
                        type="action"
                        string="Change Actual Movement Date"
                        attrs="{'invisible':[('change_actual_movement_date_ok','=',False)]}"
                    />
            </xpath>


            <xpath expr="//field[@name='picking_type_id']" position="after">
                <field name="picking_type_category_id" invisible="1" />
                <field
                        name="allowed_source_location_ids"
                        widget="many2many_tags"
                        invisible="1"
                    />
                <field
                        name="allowed_destination_location_ids"
                        widget="many2many_tags"
                        invisible="1"
                    />
                    <field
                        name="allowed_product_category_ids"
                        widget="many2many_tags"
                        invisible="1"
                    />
                    <field
                        name="allowed_product_ids"
                        widget="many2many_tags"
                        invisible="1"
                    />
                <field name="show_price_unit" invisible="1" />
                <field name="show_procure_method" invisible="1" />

            </xpath>
            <xpath expr="//field[@name='picking_type_id']" position="attributes">
                <attribute
                        name="domain"
                    >[('category_id','=',picking_type_category_id)]</attribute>
            </xpath>
            <xpath expr="//field[@name='location_id']" position="attributes">
                <attribute
                        name="domain"
                    >[('id','in',allowed_source_location_ids)]</attribute>
                <attribute name="attrs">{}</attribute>
            </xpath>
            <xpath expr="//field[@name='location_dest_id']" position="attributes">
                <attribute
                        name="domain"
                    >[('id','in',allowed_destination_location_ids)]</attribute>
                <attribute name="attrs">{}</attribute>
            </xpath>
            <xpath
                    expr="//field[@name='move_ids_without_package']/tree/field[@name='product_uom_qty']"
                    position="before"
                >
                <field
                        name="price_unit"
                        attrs="{'column_invisible':[('parent.show_price_unit','=',False)]}"
                    />
                <field
                        name="procure_method"
                        attrs="{'column_invisible':[('parent.show_procure_method','=',False)]}"
                    />
            </xpath>
            <xpath
                    expr="//field[@name='move_ids_without_package']/tree/field[@name='product_id']"
                    position="attributes"
                >
                <attribute
                        name="domain"
                    >['|',('id','in',parent.allowed_product_ids),('categ_id','child_of',parent.allowed_product_category_ids)]</attribute>
            </xpath>
            <xpath
                    expr="//field[@name='move_ids_without_package']/tree/field[@name='product_id']"
                    position="after"
                >
                <field name="forced_lot_id" />
            </xpath>
            <xpath expr="//notebook/page[last()]" position="after">
                <page name="policy" string="Policies">
                    <group
                            name="policy_1"
                            colspan="4"
                            col="2"
                            groups="base.group_system"
                        >
                        <field name="policy_template_id" />
                        <button
                                name="action_reload_policy_template"
                                type="object"
                                string="Reload Template Policy"
                                class="oe_highlight"
                                icon="fa-refresh"
                            />

                    </group>
                    <group name="policy_2" colspan="4" col="2">
                        <field name="mark_as_todo_ok" />
                        <field name="check_availability_ok" />
                        <field name="approve_ok" />
                        <field name="reject_ok" />
                        <field name="restart_approval_ok" />
                        <field name="unreserved_ok" />
                        <field name="validate_ok" />
                        <field name="cancel_ok" />
                        <field name="restart_ok" />
                        <field name="return_ok" />
                        <field name="change_actual_movement_date_ok" />
                    </group>
                </page>
            </xpath>
        </data>
    </field>
</record>



</odoo>

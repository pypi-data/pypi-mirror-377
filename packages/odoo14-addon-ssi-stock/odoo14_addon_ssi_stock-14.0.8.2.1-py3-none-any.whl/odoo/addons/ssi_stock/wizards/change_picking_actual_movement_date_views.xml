<?xml version="1.0" encoding="utf-8" ?>
<odoo>

<record id="change_picking_actual_movement_date_view_form" model="ir.ui.view">
    <field name="name">Change Picking Actual Movement Date</field>
    <field name="model">change_picking_actual_movement_date</field>
    <field name="arch" type="xml">
        <form>
            <group name="group_1" colspan="4" col="2">
                <field name="picking_ids" invisible="1" />
                <field name="actual_movement_date" />
            </group>
            <footer>
                <button
                        string="Confirm"
                        name="action_confirm"
                        type="object"
                        class="oe_highlight"
                        confirm="Are you sure?"
                    />
                or
                <button string="Cancel" class="oe_link" special="cancel" />
            </footer>
        </form>
    </field>
</record>

<record
        id="change_picking_actual_movement_date_from_warehouse_action"
        model="ir.actions.act_window"
    >
    <field name="name">Change Picking Actual Movement Date</field>
    <field name="res_model">change_picking_actual_movement_date</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="change_picking_actual_movement_date_view_form" />
    <field name="target">new</field>
    <field name="binding_model_id" ref="stock.model_stock_picking" />
    <field name="binding_view_types">list</field>
</record>

</odoo>

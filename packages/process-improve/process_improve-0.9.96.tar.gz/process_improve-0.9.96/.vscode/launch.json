{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "stopOnEntry": false,
            "showReturnValue": true,
            "env": {
                "PYDEVD_WARN_SLOW_RESOLVE_TIMEOUT": "5"
            }
        },
        {
            "name": "Python: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["${workspaceFolder}/tests", "-v", "--tb=short"],
            "console": "integratedTerminal",
            "justMyCode": false,
            "stopOnEntry": false,
            "showReturnValue": true,
            "env": {
                "PYDEVD_WARN_SLOW_RESOLVE_TIMEOUT": "5"
            }
        },
        {
            "name": "Python: Debug Current Test",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["${file}", "-v", "--tb=short"],
            "console": "integratedTerminal",
            "justMyCode": false,
            "stopOnEntry": false,
            "showReturnValue": true,
            "env": {
                "PYDEVD_WARN_SLOW_RESOLVE_TIMEOUT": "5"
            }
        }
    ]
}

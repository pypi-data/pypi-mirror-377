{
    "files.exclude": {
        "dist": true,

        "**/py.typed": true,
        "**/.ruff_cache": true,
        ".python-version": true,

        "**/.venv": true,
        "uv.lock": true,

        "**/__pycache__": true,
        ".vscode": true,
        ".github": true,
        ".turbo": true,
        "**/.turbo/": true,
        ".prettierrc": true,
        "**/README.md": true,
        "bun.lock": true,
        "coco.yml": true,
        ".gitignore": true,
        "*.code-workspace": true
    },
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
        },
        "editor.defaultFormatter": "charliermarsh.ruff"
    },
    "evenBetterToml.schema.associations": {
        "\\.?coco(\\.yml|\\.yaml|rc)$": "https://gist.githubusercontent.com/lucas-labs/0cb798e4b6c7fc720c7111c40d215c21/raw/cb068efd7d73794e738a5240a80f0cb729883553/coco-schema.json"
    },
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.indexing": true,
    "python.analysis.autoImportCompletions": true,
    "python.analysis.packageIndexDepths": [
        { "name": "pest", "depth": 20, "includeAllSymbols": true },
        { "name": "litestar", "depth": 20, "includeAllSymbols": true },
        { "name": "langchain", "depth": 10, "includeAllSymbols": true }
    ]
}

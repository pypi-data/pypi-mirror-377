manifest_version: 1.0.0
id: {{ id }}
name: {{ name }}
description: {{ description }}
version: 0.1.0
authors:
  - name: {{ author.name }}
    email: {{ author.email }}
tags: [ ]
{%- if icons %}
icons:
  {%- for icon in icons %}
  - src: ./assets/{{ icon.split('/')[-1] }}
    type: image/{{ icon.split('.')[-1] }}
  {%- endfor %}
{%- endif %}
{%- if csfe %}
csfe:
  - id: {{ csfe.id }}
    uri: {{ csfe.url }}
{%- endif %}

{%- if has_oninstall or has_onuninstall %}
actions:
  {%- if has_oninstall %}
  onInstall:
    schema: install/schema.json
    script: install/install
  {%- endif %}
  {%- if has_onuninstall %}
  onUninstall:
    script: install/uninstall
  {%- endif %}
  {%- if has_onmigrate %}
  onMigrate:
    script: install/migrate
  {%- endif %}
{%- endif %}
{%- if ui_plugins and ui_plugins|length > 0 %}
ui_plugins:
  {%- for plugin in ui_plugins %}
  - src: install/{{ plugin }}
    name: {{ plugin.split('.')[0] }}
  {%- endfor %}
{%- endif %}

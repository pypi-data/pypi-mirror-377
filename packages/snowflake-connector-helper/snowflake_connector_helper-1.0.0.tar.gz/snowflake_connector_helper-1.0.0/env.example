# Snowflake Connection Configuration
# Copy this file to .env and fill in your actual values

# Required: Snowflake account identifier
SNOWFLAKE_ACCOUNT=your_account_name

# Required: Username
SNOWFLAKE_USER=your_username

# SECURITY: ONLY PRIVATE KEY AUTHENTICATION SUPPORTED
# Password authentication has been disabled for security reasons
SNOWFLAKE_PRIVATE_KEY_PATH=/path/to/your/private_key.p8
SNOWFLAKE_PRIVATE_KEY_PASSPHRASE=your_passphrase

# Optional: Default warehouse, database, schema, and role
SNOWFLAKE_WAREHOUSE=your_warehouse
SNOWFLAKE_DATABASE=your_database
SNOWFLAKE_SCHEMA=your_schema
SNOWFLAKE_ROLE=your_role

# Optional: Authentication method (default: snowflake)
SNOWFLAKE_AUTHENTICATOR=snowflake

# Optional: Timeout settings (in seconds)
SNOWFLAKE_NETWORK_TIMEOUT=60
SNOWFLAKE_LOGIN_TIMEOUT=120

# Optional: Connection pooling settings
SNOWFLAKE_USE_POOL=false
SNOWFLAKE_POOL_MIN_CONNECTIONS=1
SNOWFLAKE_POOL_MAX_CONNECTIONS=10
SNOWFLAKE_POOL_MAX_CONNECTION_AGE=3600
SNOWFLAKE_POOL_MAX_IDLE_TIME=300
SNOWFLAKE_POOL_HEALTH_CHECK_INTERVAL=60
SNOWFLAKE_POOL_CONNECTION_TIMEOUT=30
SNOWFLAKE_POOL_ENABLE_HEALTH_CHECKS=true
SNOWFLAKE_POOL_AUTO_CLEANUP=true

{
  "name": "@talk-box/react-chat",
  "version": "0.1.0",
  "description": "A customizable React chat component for Talk Box AI chatbots",
  "type": "module",
  "main": "dist/talk-box-chat.umd.js",
  "module": "dist/talk-box-chat.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/talk-box-chat.es.js",
      "require": "./dist/talk-box-chat.umd.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:lib": "vite build --mode lib",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "clsx": "^2.1.0",
    "lucide-react": "^0.263.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "rehype-highlight": "^7.0.0",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vite-plugin-dts": "^3.8.1"
  },
  "keywords": [
    "react",
    "chat",
    "chatbot",
    "ai",
    "talk-box",
    "conversation",
    "ui-component"
  ],
  "author": "Richard Iannone <riannone@me.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rich-iannone/talk-box.git",
    "directory": "talk_box/web_components/react-chat"
  }
}
